{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@module/*": ["src/module/*"],
      "@controller/*": ["src/api/*"],
      "@util/*":["src/util/*"],
      "@global/*": ["src/global/*"],
      "@exception/*": ["src/exception/*"],
      "@config/*": ["src/config/*"],
      "@common/*": ["src/common/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
